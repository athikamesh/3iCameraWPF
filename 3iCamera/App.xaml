                                            </RadialGradientBrush.RelativeTransform>
                                            <GradientStop Color="#FF2991F9" Offset="1"/>
                                            <GradientStop Color="#FF2991F9" Offset="0.3"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
