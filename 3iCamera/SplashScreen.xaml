<Window xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3iCamera"
        xmlns:Custom="http://metrowpf.codeplex.com/controls" xmlns:WPFSpark="clr-namespace:WPFSpark;assembly=WPFSpark" x:Class="_3iCamera.SplashScreen"
        mc:Ignorable="d"
        Title="SplashScreen" Height="400" Width="600" WindowStartupLocation="CenterScreen" WindowState="Normal" ResizeMode="NoResize" WindowStyle="None">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/splashscreen_v1p3.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txt_status" HorizontalAlignment="Left" Height="25"  Grid.Row="1" VerticalAlignment="Top"></TextBlock>
        <WPFSpark:FluidProgressBar HorizontalAlignment="Left" Height="25"  Grid.Row="1" VerticalAlignment="Bottom" Width="600"/>
    </Grid>
</Window>
